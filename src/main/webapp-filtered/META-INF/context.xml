<!-- META-INF/context.xml is used for local development deployment only -->
<Context path="/javatator">

	<Parameter
		name="com.javaphilia.javatator.DatabaseConfiguration"
		value="@{com.javaphilia.javatator.DatabaseConfiguration}"
		override="false"
	/>

	<Parameter
		description="XHTML enabled in development"
		name="com.aoindustries.encoding.Serialization.default" value="auto"
		override="false"
	/>

	<Parameter
		description="Automatic newline (and tab indentation when enabled) enabled in development"
		name="com.aoindustries.html.servlet.DocumentEE.autonli" value="true"
		override="false"
	/>

	<Parameter
		description="Tab indentation enabled in development"
		name="com.aoindustries.html.servlet.DocumentEE.indent" value="true"
		override="false"
	/>

	<Parameter
		description="Enable RFC 3987 IRI support in development"
		name="com.aoindustries.servlet.filter.EncodeURIFilter.enableIRI" value="true"
		override="false"
	/>

	<Parameter
		description="Do not filter whitespace in development"
		name="com.aoindustries.servlet.filter.TrimFilter.enabled" value="false"
		override="false"
	/>

</Context>
